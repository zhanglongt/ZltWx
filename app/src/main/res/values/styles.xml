<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- tab栏上的按钮样式 -->
    <style name="MyTabButton">
        <item name="android:textSize">15.0dp</item>
        <item name="android:textColor">@color/main_index_textcolor_bg</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">0.00000075dip</item>
        <item name="android:layout_marginRight">0.00000000dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">3.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:drawablePadding">3.0dip</item>
    </style>

    //开启页
    <style name="CustomWelcomeScreenTheme" parent="WelcomeScreenTheme">
        <item name="welcomeIndicatorStyle">@style/WelcomeScreenPageIndicator.Custom</item>
        <item name="welcomeTitleTextStyle">@style/WelcomeScreenText.Title.Centered</item>
    </style>

    <style name="WelcomeScreenPageIndicator.Custom">
        <item name="animated">true</item>
    </style>

    <style name="WelcomeScreenText.Title.Centered.Custom">
        <item name="android:textSize">30sp</item>
    </style>

</resources>
